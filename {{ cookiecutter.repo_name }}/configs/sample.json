{
    "seed": 442,
    "data": {
        "path": {
            "train": "data/processed/train.csv",
            "val":   "data/processed/val.csv",
            "test":  "data/processed/test.csv"
        }
    },
    "model": {
        "type": "base",
        "depth": 2,
        "hidden_units": 64,
        "act": "relu",
        "drop_out": 0.3
    },
    "trainer": {
        "num_epochs": 20,
        "batch_size": 64,
        "loss_fn": {
            "type": "focal"
        },
        "optimizer": {
            "type": "adam",
            "learning_rate": 3e-5
        },
        "callbacks": [
            {
                "type": "early_stopping",
                "monitor": "val_binary_accuracy",
                "mode": "max",
                "patience": 5,
                "min_delta": 1e-3,
                "restore_best_weights": true
            },
            {
                "type": "model_checkpoint",
                "monitor": "val_binary_accuracy",
                "mode": "max",
                "save_weights_only": true,
                "save_best_only": true
            },
            {
                "type": "logging"
            }
        ]
    },
    "hyp": {
        "trainer.optimizer.learning_rate": {
            "type": "float",
            "range": [1e-5, 1e-3],
            "log": true
        }
    }
}